<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<fieldset label="$fieldset_label">
 <notebook>
  <page label="définition">
   <form>
    <hbox>
     <vbox>
      <elem field="name" />
      <elem field="code" />
      <elem field="app" />
      <hbox>
       <vbox><elem field="status" /></vbox>
       <vbox><elem field="position" /></vbox>
      </hbox>
      <elem field="flags" />
      <elem field="locales" />
     </vbox>
     <vbox localized="true">
      <elem field="title" label="titre" />
      <elem field="description" rows="4" label="description" />
     </vbox>
    </hbox>
    <launcher/>
   </form>
  </page>
  <page label="opérations" built="$is_loaded">
   <hbox>
    <vbox width="150px">
     <box label="actions">
      <link icon="details" />
      <link icon="note" />
     </box>
    </vbox>
    <vbox><deck /></vbox>
   </hbox> 
  </page>
 </notebook>
</fieldset>


