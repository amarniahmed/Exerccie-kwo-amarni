<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<fieldset label="$fieldset_label">
 <notebook>
  <page label="définition">
   <form>
    <hbox>
     <vbox width="35%">
      <elem field="code" required="true" />
      <elem field="app" />
      <hbox>
       <vbox><elem field="status" /></vbox>
       <vbox><elem field="flags" /></vbox>
      </hbox>
      <hbox>
       <vbox><elem field="from_name" label="from name" /></vbox>
       <vbox><elem field="from_email" label="from email" /></vbox>
      </hbox>
      <elem field="recipients" label="destinataires à avertir" />
      <elem field="locales" />
      <elem field="about" />
     </vbox>
     <vbox localized="true">
      <elem field="subject" label="sujet" />
      <elem field="body" mode="rich" rows="15" label="corps" />
     </vbox>
    </hbox>
    <launcher />
   </form>
  </page>
  <page label="opérations" built="$is_loaded">
   <hbox>
    <vbox width="150px">
     <box label="actions">
      <link icon="details" />
      <link icon="note" />
      <link icon="metrics" />
      <link icon="conversions" />
     </box>
    </vbox>
    <vbox>
     <deck />
    </vbox>
   </hbox> 
  </page>
 </notebook>
</fieldset>
