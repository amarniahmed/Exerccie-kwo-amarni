<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<fieldset>
 <notebook>
  <page>
   <form>
    <hbox>
     <vbox>
      <elem field="name" required="true" />
      <elem field="code" required="true" />
      <elem field="app" />
      <elem field="flags" />
      <hbox>
       <vbox><elem field="icon" /></vbox>
       <vbox><elem field="thumbnail" /></vbox>
       <vbox><elem field="image" /></vbox>
      </hbox>
      <elem field="provider" />
      <elem field="locales" />
      <elem field="about" />
     </vbox>
     <vbox localized="true">
      <elem field="title" />
      <elem field="description" rows="5" />
      <elem field="content" mode="rich" rows="15" />
      <elem field="url" />
     </vbox>
    </hbox>
    <launcher/>
   </form>
  </page>
  <page>
   <hbox>
    <vbox width="150px">
     <box label="actions">
      <link icon="details" />
     </box>
    </vbox>
    <vbox><deck /></vbox>
   </hbox> 
  </page>
 </notebook>
</fieldset>
