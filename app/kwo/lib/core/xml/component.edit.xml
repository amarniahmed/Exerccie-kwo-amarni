<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<fieldset label="$fieldset_label">
 <notebook>
  <page label="définition">
   <form>
    <hbox>
     <vbox width="40%">
      <elem field="name" />
      <hbox>
       <vbox><elem field="status" type="yesno" /></vbox>
       <vbox><elem field="section_id" options="$sections" addfirst="--" /></vbox>
      </hbox>
      <elem field="file" type="file" />

      <elem field="locales" />
     </vbox>
     <vbox localized="true">
      <elem field="title" precision="question" />
      <elem field="content" mode="rich" rows="20" precision="réponse" />
     </vbox>
    </hbox>
    <launcher/>
   </form>
  </page>
  <page label="opérations" built="$is_loaded">
   <hbox>
    <vbox width="150px">
     <box label="actions">
      <link icon="details" />
     </box>
    </vbox>
    <vbox><deck /></vbox>
   </hbox> 
  </page>
 </notebook>
</fieldset>

