<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<fieldset label="$fieldset_label">
<notebook>

 <page label="définition">
  <form>
   <hbox>
    <vbox width="20%">
     <elem field="name" label="résumé" />
     <elem field="status" type="yesno" label="traité" />
     <elem field="flags" />
    </vbox>
    <vbox>
     <grid label="contenu" value="$fields" layout="auto" />
    </vbox>
   </hbox>
   <launcher/>
  </form>
 </page>

 <page label="opérations" built="$is_loaded">
  <hbox>
   <vbox width="150px">
    <box label="actions">
     <link icon="details" />
     <link icon="note" />
    </box>
   </vbox>
   <vbox><deck /></vbox>
  </hbox> 
 </page>

</notebook>
</fieldset>

