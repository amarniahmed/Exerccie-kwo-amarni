<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<fieldset label="$fieldset_label">

<notebook>
<page label="définition">
 <form>
  <hbox>
   <vbox>
    <elem field="name" />
    <hbox>
     <vbox><elem field="status" /></vbox>
     <vbox><elem field="cost" precision="EUR" /></vbox>
     <vbox><elem field="flags" /></vbox>
    </hbox>
    <elem field="description" rows="3" />
   </vbox>
   <vbox>
    <elem type="acl" />
   </vbox>
  </hbox>
  <launcher/>
 </form>
</page>
<page label="opérations" built="$is_loaded">
 <hbox>
  <vbox width="150px">
   <box label="actions">
    <link icon="details" />
    <link icon="conversions" />
   </box>
  </vbox>
  <vbox><deck /></vbox>
 </hbox> 
</page>
</notebook>

</fieldset>

