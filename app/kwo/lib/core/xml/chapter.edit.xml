<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<fieldset label="$fieldset_label">
<notebook>

 <page label="définition">
  <form>
   <hbox>
    <vbox>
     <elem field="article_id" type="hidden" />
     <elem field="name" required="true" />
     <elem field="locales" />
    </vbox>
    <vbox localized="true">
     <elem field="title" />
     <elem field="content" mode="rich" rows="20" />
    </vbox>
   </hbox>
   <launcher/>
  </form>
 </page>
 
 <page label="opérations" built="$is_loaded">
  <hbox>
   <vbox width="30%">
    <box label="actions">
     <link icon="details" />
    </box>
   </vbox>
   <vbox><deck /></vbox>
  </hbox> 
 </page>

</notebook>
</fieldset>

